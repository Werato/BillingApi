@model FrontendAPI.Models.Receipt

@{
    ViewData["Title"] = "Result";
}

<div class="container mt-5">
    <h2 class="mb-4">Order Receipt</h2>

    <table class="table table-bordered">
        <tr><th>ReceiptId</th><td>@Model.ReceiptId</td></tr>
        <tr><th>OrderNumber</th><td>@Model.OrderNumber</td></tr>
        <tr><th>Timestamp</th><td>@Model.Timestamp</td></tr>
        <tr><th>PaymentGateway</th><td>@Model.PaymentGateway</td></tr>
        <tr><th>AmountPaid</th><td>@Model.AmountPaid</td></tr>
    </table>

    <a href="@Url.Action("Index", "Order")" class="btn btn-secondary">Back to Order Form</a>
</div>